<UserControl x:Class="GitItGUI.UI.Screens.RepoScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitItGUI.UI.Screens.RepoTabs"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
		<Label HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="32" FontSize="16">Current Repo (Branch) [State]</Label>
		<TabControl Margin="0,32,0,0">
			<TabItem Header="Changes">
				<local:ChangesTab/>
			</TabItem>
			<TabItem Header="Branches">
				<local:BranchesTab/>
			</TabItem>
			<TabItem Header="History"/>
			<TabItem Header="Settings"/>
		</TabControl>
	</Grid>
</UserControl>

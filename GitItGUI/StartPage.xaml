<UserControl xmlns="https://github.com/avaloniaui" Design.Width="640" Design.Height="400" >
	<Grid Name="grid">
		<TextBlock FontSize="32" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">Git-It-GUI</TextBlock>
		<TextBlock FontSize="16" Margin="0,60,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">Select a project from history or open/clone another one</TextBlock>
		<Button Name="settingsButton" Margin="0,10,10,-10" Width="32" Height="32" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent">
			<Image Source="resm:GitItGUI.Icons.Settings.png?assembly=GitItGUI" Margin="0" Width="28" Height="28" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Button>
		<Grid Background="LightGray" Margin="10,100,10,10">
			<Button Name="openButton" Margin="0,10,10,-10" Width="128" Height="32" HorizontalAlignment="Right" VerticalAlignment="Top">Open</Button>
			<Button Name="cloneButton" Margin="10,10,0,-10" Width="128" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top">Clone</Button>
			<StackPanel Name="recentStackPanel" Background="White" Margin="10,52,10,10"/>
		</Grid>
	</Grid>
</UserControl>
<UserControl xmlns="https://github.com/avaloniaui" MinWidth="1024" MinHeight="800"
	xmlns:gititgui="clr-namespace:GitItGUI;assembly=GitItGUI">

	<Grid>
		<TextBlock Name="repoName" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22" Margin="0,5,0,-5" Height="30">My Repo Name</TextBlock>
		<Button Name="closeRepoButton" HorizontalAlignment="Right" VerticalAlignment="Top" Width="110" Height="30" Margin="-10,5,10,-5">Close Repo</Button>

		<Grid Margin="0,30,0,0">
			<TabControl Name="tabControl">
				<TabItem Name="changesPage" Header="Changes">
					<gititgui:ChangesPage/>
				</TabItem>

				<TabItem Name="branchesPage" Header="Branches">
					<gititgui:BranchesPage/>
				</TabItem>

				<TabItem Name="historyPage" Header="History">
					<gititgui:HistoryPage/>
				</TabItem>

				<TabItem Name="settingsPage" Header="Settings">
					<gititgui:SettingsPage/>
				</TabItem>
			</TabControl>
		</Grid>

		<TextBlock Name="refreshTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Margin="0,0,0,0">Refreshing...</TextBlock>
	</Grid>

</UserControl>